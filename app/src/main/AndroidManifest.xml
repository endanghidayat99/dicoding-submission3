<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.co.endang.mymovie3">

    <uses-permission android:name="android.permission.INTERNET" />

    <permission
        android:name="id.co.endang.mymovie3.READ_DATABASE"
        android:protectionLevel="normal" />
    <permission
        android:name="id.co.endang.mymovie3.WRITE_DATABASE"
        android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <provider
            android:name=".db.provider.MovieContentProvider"
            android:authorities="id.co.endang.mymovie3.db.provider"
            android:exported="true"
            android:readPermission="id.co.endang.mymovie3.READ_DATABASE"></provider>

        <service
            android:name=".service.FavoriteWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <receiver android:name=".FavoriteMovieWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/favorite_movie_widget_info" />
        </receiver>
        <receiver
            android:name=".service.ReminderReceiver"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".view.SearchActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.FavoriteActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".view.DetailMovieActivity" />
        <activity android:name=".view.SettingActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>